<%= form_with model: [article, article.comments.build] do |form| %>
  <p>
    <%= form.label :commenter %>
    <%= form.text_field :commenter %>
  </p>

  <p>
    <%= form.label :body %>
    <%= form.text_field :body %>
  </p>

  <p>
    <%= form.label :status %><br>
    <%= form.select :status, %w[public private archived],
                    selected: 'public' %>
  </p>

  <div>
    <%= form.submit %>
  </div>
<%end%>